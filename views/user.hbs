<div class="userdiv">
    <div class="col-lg-10 shadow-lg mt-4" id="content-space" style="background-color: #27374D">
        <div class="userdetails">
            <h1><a href="/editname"> {{username}} </a></h1>
            <h2><a href="/editemail"> {{email}} </a></h2>
            <p><a href="/editpassword"> Change Password </a></p>
        </div>
    </div>

    <div class="col-lg-10 shadow-lg mt-4" id="content-space" style="background-color: #27374D">
        <div id="post-section ">
            <!-- POST 1 -->
            {{#each userdataset}}
            <div class="post  container-fluid mt-5 mb-4   rounded">
                <div class="d-flex flex-row justify-content-start">
                    <div class="d-flex flex-column">
                        <div class="mt-3 user-icon m-2 bg-muted rounded">
                            <img src="https://us-tuna-sounds-images.voicemod.net/3c0e6fe3-c69d-4f51-9cbe-7800439efbe4-1658809062266.jpg" class = "profile-avatar img-fluid border border-dark rounded" alt="" >
                        </div>
                    </div>

                    <div class="d-flex flex-column bd-highlight">
                        <div class="p-2 bd-highlight post-info">
                            <a href="" class="text-dark"><b>{{userame}}</b></a> posted on <b><a href="" class="text-dark">Mustang Forum</a></b> <i>{{PostTime}}</i>
                        </div>
                        <div class="post-title">
                            <div class="pt-1 pl-2 "> <b>{{PostTitle}}</b></div>
                        </div>
                        <div class="pl-2 pb-2  bd-highlight"> {{PostDescription}}</div>
                    </div>
                </div>

                <div class="d-flex flex-row">
                    <div class="vote-div d-flex flex-column">
                        <button class=" btn btn-outline-dark vote-up-icon p-1 m-2 bg-muted rounded">
                            <i class="fa fa-arrow-up" id = "upvote1"></i>
                        </button>
                        <div class="post-vote-count" id = "likeCount1">
                            0
                        </div>
                        <button class=" btn btn-outline-dark vote-up-icon p-1 m-2 bg-muted rounded">
                            <i class="fa fa-arrow-down" id = "downvote1"></i>
                        </button>
                    </div>

                    <div class="img-post d-flex flex-column">
                        <div class="img-content  mr-5 ml-4 mt-3">
                            <img src="../img/obama_stang.jpg" class="rounded img-fluid" alt="">
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-row post-buttons">
                    <div class="flex-column">
                        <button id="comments-button" class="btn btn-sm btn-outline-dark mr-2"><i class="fa-solid fa-comment"></i>
                            Comments</button>
                    </div>
                    <div id="comments-box" style="display: none;">
                        <h2>Comments</h2>
                        <div id="comments-section"></div>
                    </div>
                    <div class="flex-column">
                        <button class="btn btn-sm btn-outline-dark mr-2 "><i class="fa-solid fa-share"></i>
                            Share</button>
                    </div>
                    <div class="flex-column">
                        <button class="btn btn-sm btn-outline-dark mr-2 "><i class="fa-solid fa-bookmark"></i>
                            Save</button>
                    </div>
                    <div class="flex-column">
                        <button class="btn btn-sm btn-outline-dark mr-2 "><i class="fa-solid fa-pencil"></i>
                            Edit</button>
                    </div>
                    <div class="flex-column">
                        <button class="btn btn-sm btn-outline-dark mr-2 "><i class="fa-solid fa-trash"></i>
                            Delete</button>
                    </div>
                </div>
            </div>
            {{/each}}
